rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // üîê Allow all reads (for dashboards or data display)
    // Only authenticated users can write (submit incidents)
    match /incidents/{incidentId} {
      allow read: if true;
      allow create: if request.auth != null; // must be logged in
      allow update, delete: if false; // prevent editing or deleting reports
    }

    // (Optional) Users collection if you plan to store user profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
